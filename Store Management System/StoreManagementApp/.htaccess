<IfModule mod_rewrite.c>
    Options All
    Options +FollowSymLinks
    RewriteEngine On

    RewriteRule "^([a-zA-Z]+)/([a-zA-Z]+)/([a-zA-Z0-9%\-_\s]+)/?$" "index.php?controller=$1&action=$2&id=$3" [NC,L]
</IfModule>

RewriteEngine On

RewriteRule "^([a-zA-Z]+)/?$" "index.php?controller=$1&action=list"
RewriteRule "^([a-zA-Z]+)/([a-zA-Z]+)/?$" "index.php?controller=$1&action=$2"
RewriteRule "^([a-zA-Z]+)/([a-zA-Z]+)/([0-9]+)/?$" "index.php?controller=$1&action=$2&id=$3"
RewriteRule "^([a-zA-Z]+)/([a-zA-Z]+)/([a-zA-Z0-9\+\-\_\s]+)/?$" "index.php?controller=$1&action=$2&id=$3" [NC,L]

